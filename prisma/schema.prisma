// schema.prisma

generator client {
  provider = "prisma-client-ts"
  output = "../src/lib/client"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL") // uses connection pooling
}

model Card {
  id        String     @default(cuid()) @id
  name      String
  rarity    String
  pack      String
  health    String
  image     String
  fullart   String
  ex        String
  artist    String
  type      String
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  String?
  @@map(name: "cards")
}

model User {
  id            String       @default(cuid()) @id
  name          String?
  picture       String?
  email         String?   @unique
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  cards         Card[]
  @@map(name: "users")
}