generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  cards Card[]
}

model Card {
  id        Int     @id @default(autoincrement())
  name      String
  rarity    String
  pack      String
  health    String
  image     String
  fullart   String
  ex        String
  artist    String
  type      String
  userId    Int
  owner     User    @relation(fields: [userId], references: [id])
}
